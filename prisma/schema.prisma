model Admin {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  role          String   @default("admin")
  profileImage  String?  // New field for profile image
  users         User[]
}
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("retailer") // Default role is set to "retailer"
  parentId  Int?
  admin     Admin?   @relation(fields: [parentId], references: [id])
  
}

